@page
@model BulkyWeb_Temp.Pages.Categories.DeleteModel
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2 row">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled type="text" class="form-control" />
        </div>
        <input type="hidden" asp-for="Category.Category_Id" />
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">DELETE</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>

